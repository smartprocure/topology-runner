{
  "name": "topology-runner",
  "version": "0.0.1",
  "description": "Run a topology consisting of a directed acyclical graph",
  "author": "GovSpend",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git://github.com/smartprocure/topology-runner.git",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc --declaration",
    "test": "ava",
    "lint": "eslint src/**"
  },
  "keywords": [
    "topology",
    "dag",
    "directed",
    "acyclical",
    " graph",
    "runner"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "license": "ISC",
  "dependencies": {
    "eventemitter3": "^4.0.7",
    "lodash": "^4.17.21",
    "make-error": "^1.3.6"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "ava": "^4.2.0",
    "eslint": "^8.15.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "ava": {
    "typescript": {
      "compile": "tsc",
      "rewritePaths": {
        "src/": "dist/"
      }
    }
  }
}
